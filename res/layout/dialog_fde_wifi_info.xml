<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_fde_wifi_circle"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtWifiName"
        android:layout_width="match_parent"
        android:text="--"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/app_black_light"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:text="状态"
            android:layout_weight="1"
            android:textColor="@color/app_black_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtStatus"
            android:text="--"
            android:layout_weight="1"
            android:textColor="@color/app_black_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#f2f2f2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:text="信号强度"
                android:layout_weight="1"
                android:textColor="@color/app_black_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtSignal"
                android:text="--"
                android:layout_weight="1"
                android:textColor="@color/app_black_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#f2f2f2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:text="加密方式"
                android:layout_weight="1"
                android:textColor="@color/app_black_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtEncryption"
                android:text="--"
                android:layout_weight="1"
                android:textColor="@color/app_black_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:text="@string/fde_btn_cancel"
            android:gravity="center"
            android:textColor="@color/app_black_light"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:text="@string/fde_no_save"
            android:layout_weight="1"
            android:textColor="@color/app_black_light"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    </LinearLayout>

</LinearLayout>