<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_fde_wifi_circle"
    android:layout_margin="16dp"
    android:layout_gravity="top|left"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtWifiName"
        android:layout_width="match_parent"
        android:text="TEST"
        android:gravity="center"
        android:padding="12dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editPassword"
        android:inputType="textPassword"
        android:background="@drawable/bg_fde_wifi_edit"
        android:layout_width="match_parent"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:textSize="12sp"
        android:paddingVertical="8dp"
        android:hint="@string/fde_enter_wifi_password"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:text="@string/fde_btn_cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:text="@string/fde_btn_confirm"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>